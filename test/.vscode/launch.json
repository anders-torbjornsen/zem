    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Diamonds",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
            "args": [
                "run",
                "scripts/diamonds.ts"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Diamonds (Ganache)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
            "args": [
                "run",
                "scripts/diamonds.ts"
            ],
            "env": {
                "HARDHAT_NETWORK": "ganache"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "ERC1967",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
            "args": [
                "run",
                "scripts/erc1967.ts"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "ERC1967 (Ganache)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
            "args": [
                "run",
                "scripts/erc1967.ts"
            ],
            "env": {
                "HARDHAT_NETWORK": "ganache"
            }
        }
    ]
}